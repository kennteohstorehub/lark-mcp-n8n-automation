{
  "name": "lark-mcp-server",
  "version": "1.0.0",
  "description": "Lark Suite MCP Server for AI automation with n8n",
  "main": "lark_mcp_server_example.js",
  "scripts": {
    "start": "node lark_mcp_server_example.js",
    "dev": "nodemon lark_mcp_server_example.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "echo 'Build step - no compilation needed for Node.js'",
    "setup": "node setup.js",
    "docker:build": "docker build -t lark-mcp-server .",
    "docker:run": "docker run -p 3000:3000 lark-mcp-server"
  },
  "keywords": [
    "lark",
    "larksuite",
    "mcp",
    "ai",
    "automation",
    "n8n",
    "claude",
    "bytedance"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "@types/node": "^20.8.0",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "@eslint/js": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kennteohstorehub/lark-mcp-n8n-automation"
  },
  "bugs": {
    "url": "https://github.com/kennteohstorehub/lark-mcp-n8n-automation/issues"
  }
}
